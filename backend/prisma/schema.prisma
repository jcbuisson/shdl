// groupe 1SN24D, 2024-12-10T14:00 à 2024-12-10T15:45
model group_slot {
   id                      Int        @id @default(autoincrement())
   group_id                Int
   label                   String
   color                   String     @default("blue")
   start                   DateTime
   end                     DateTime
}

model shdl_test {
   id                      Int        @id @default(autoincrement())
   color                   String     @default("blue")
   signature               String     // ex: "a, b, cin, s, cout"
   text                    String     // ex: "set rst 1\ncheck a 0"
}

model user_shdl_test {
   id                      Int        @id @default(autoincrement())
   user_id                 Int
   shdl_test_id            Int
   date                    DateTime
   success                 Boolean
}

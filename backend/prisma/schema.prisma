generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
   url = env("DATABASE_URL")
}


model user {
   id                      Int        @id @default(autoincrement())
   created_at              DateTime   @default(now()) @db.Timestamptz(6)
   email                   String?    @unique(map: "user_sub_unique")
   password                String?
   firstname               String?
   lastname                String?
   pict                    String     @default("/static/img/avatar.svg")

   groups                  group[]
}

enum Tab {
   user_management
   group_management
   test_management
   student_followup
   shdl_sandbox
   craps_sandbox
}

model user_tab {
   id                      Int        @id @default(autoincrement())
   user_id                 Int
   tab                     Tab

   @@unique([user_id, tab])
}

// 'Enseignants', '1SN24D', '1APP24', 'Binôme X & Y'
model group {
   id                      Int        @id @default(autoincrement())
   name                    String     @unique(map: "group_name_unique")

   users                   user[]
}


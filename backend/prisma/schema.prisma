generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
   url = env("DATABASE_URL")
}


model user {
   id                      Int        @id @default(autoincrement())
   created_at              DateTime   @default(now()) @db.Timestamptz(6)
   email                   String?    @unique(map: "user_sub_unique")
   password                String?
   firstname               String?
   lastname                String?
}

// 'Gestion utilisateurs', 'Suivi étudiants', 'Gestion des groupes', 'SHDL sandbox', 'CRAPS sandbox', "Gestion des tests"
model feature {
   id                      Int        @id @default(autoincrement())
   name                    String     @unique(map: "feature_name_unique")
}

model user_feature {
   id                      Int        @id @default(autoincrement())
   user_id                 Int
   feature_id              Int

   @@unique([user_id, feature_id])
}

// 'Enseignants', '1SN24D', '1APP24', 'Binôme X & Y'
model group {
   id                      Int        @id @default(autoincrement())
   name                    String     @unique(map: "group_name_unique")
}

model user_group {
   id                      Int        @id @default(autoincrement())
   user_id                 Int
   group_id                Int

   @@unique([user_id, group_id])
}

// groupe 1SN24D, 2024-12-10T14:00 à 2024-12-10T15:45
model group_slot {
   id                      Int        @id @default(autoincrement())
   group_id                Int
   label                   String
   color                   String     @default("blue")
   start                   DateTime
   end                     DateTime
}

model shdl_test {
   id                      Int        @id @default(autoincrement())
   color                   String     @default("blue")
   signature               String     // ex: "a, b, cin, s, cout"
   text                    String     // ex: "set rst 1\ncheck a 0"
}

model user_shdl_test {
   id                      Int        @id @default(autoincrement())
   user_id                 Int
   shdl_test_id            Int
   date                    DateTime
   ok                      Boolean
}
